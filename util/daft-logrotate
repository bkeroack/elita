/var/log/daft/daft.log
{
	rotate 7
	daily
	missingok
	notifempty
	delaycompress
	compress
	prerotate
		/home/ubuntu/kill-daft.sh >/dev/null 2>&1 || true
	endscript
	postrotate
		/home/ubuntu/start-daft-root.sh >/dev/null 2>&1 || true
	endscript
}

/var/log/daft/celery-worker.log
{
	rotate 7
	daily
	missingok
	notifempty
	delaycompress
	prerotate
		/home/ubuntu/kill-celery.sh >/dev/null 2>&1 || true
	endscript
	postrotate
		/home/ubuntu/start-celery-root.sh >/dev/null 2>&1 ||true
	endscript
}

